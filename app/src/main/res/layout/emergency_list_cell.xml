<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:descendantFocusability= "blocksDescendants">

    <LinearLayout
        android:id="@+id/llEt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_head_portrait"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:background="@drawable/round_yellow"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:gravity="center_vertical" >
            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:gravity="center_vertical|left"/>
            <TextView
                android:id="@+id/tv_phone_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c666"
                android:textSize="14sp"
                android:gravity="center_vertical|left"
                android:layout_marginTop="3dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:paddingRight="10dp"
            android:background="@drawable/bg_btn_delete">
        </Button>
    </LinearLayout>
    <Button
        android:id="@+id/btnAddMoreOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_btn_bg"
        android:text="@string/add_more_one"
        android:textColor="#F44E31"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/px25"
        android:layout_marginBottom="@dimen/px25"
        android:layout_marginRight="@dimen/px56"
        android:layout_marginLeft="@dimen/px56"
        android:visibility="gone"
        />
</LinearLayout>

